<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HomePageController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Finance Manager"/>
    
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
        <Text style="-fx-font-size: 18px;" text="Summary"/>
        <HBox spacing="20">
            <VBox style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 5;">
                <Text text="Total Transactions"/>
                <Text fx:id="totalTransactionsText" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>
            <VBox style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 5;">
                <Text text="Total Income"/>
                <Text fx:id="totalIncomeText" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>
            <VBox style="-fx-background-color: #ffebee; -fx-padding: 15; -fx-background-radius: 5;">
                <Text text="Total Expenses"/>
                <Text fx:id="totalExpensesText" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </VBox>

    <Button text="View Transactions" 
            onAction="#handleViewTransactions"
            style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px;"/>
</VBox> 